<div class="container">
  <div class="text-end">
    <%= link_to "Login", login_index_path, class: "btn btn-primary" %>
  </div>
  <!-- Show Users -->
  <div class="text-center mb-5">
    <h1>Users</h1>
    <%= link_to "Create User", new_user_path, class: "link" %>
  </div>
  <div class="text-center">
    <% unless @users.length < 1 %>
      <% @users.each do |user| %>
        <h3><i class="fas fa-user-alt"></i><%= link_to user.name, user, class: "text-decoration-none text-black" %></h3>
      <% end %>
    <% else %>
      <p>No user yet!</p>
    <% end %>
  </div>
  <hr>
  <!-- Show Posts -->
  <div class="text-center mb-5">
    <h1>Posts</h1>
    <%= link_to "Create Post", new_post_path, class: "link" %>
  </div>
  <div class="text-center">
    <% unless @posts.length < 1 %>
      <% @posts.each do |post| %>
        <h3><i class="fas fa-sticky-note"></i><%= link_to post.title, post, class: "text-decoration-none text-black" %></h3>
      <% end %>
    <% else %>
      <p>No post yet!</p>
    <% end %>
  </div>
</div>
