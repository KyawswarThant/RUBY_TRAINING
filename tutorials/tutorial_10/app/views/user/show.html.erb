<div class="container">
  <a href="<%= root_path %>" class="text-black"><i class="fas fa-arrow-left"></i></a>
  <div class="mb-5">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone No</th>
          <th>Address</th>
          <th>Birthday</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.name %></td>
          <td><%= @user.email %></td>
          <td><%= @user.phone %></td>
          <td><%= @user.address %></td>
          <td><%= @user.birthday %></td>
        </tr>
      </tbody>
    </table>
    <%= link_to "edit", edit_user_path, class: "link" %>
    <%= link_to "delete", user_path, method: "delete", data: { confirm: "Are you sure? This will also delete all your posts!" }, class: "link text-danger" %>
    <%= link_to "Create Post", new_post_path, class: "link" %>
  </div>
  <div class="mb-3">
    <h1>Posts</h1>
  </div>
  <div>
    <% unless @posts.length < 1 %>
      <% @posts.each do |post| %>
        <h3><%= link_to post.title, post, class: "text-decoration-none text-black" %></h3>
      <% end %>
    <% else %>
      <p>No post yet!</p>
    <% end %>
  </div>
</div>
