<div class="container">
  <div class="text-center mb-5">
    <h1>Users</h1>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Users</li>
    </ol>
    <%= link_to "Create User", new_user_path, class: "link" %>
  </div>
  <div class="text-center">
    <% unless @users.length < 1 %>
      <% @users.each do |user| %>
        <h3><i class="fas fa-user-alt"></i><%= link_to user.name, user, class: "text-decoration-none text-black" %></h3>
      <% end %>
    <% else %>
      <p>No user yet!</p>
    <% end %>
  </div>
</div>
