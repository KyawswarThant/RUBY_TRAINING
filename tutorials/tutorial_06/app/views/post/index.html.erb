<% if @posts %>
  <div class="text-center mt-3 mb-5">
    <h1>Posts</h1>
    <%= link_to "Create Post", new_post_path, class: "btn btn-outline-primary" %>
  </div>
  <div class="text-center">
    <% @posts.each do |post| %>
      <%= link_to post.title, post, class: "text-decoration-none text-black" %>
    <% end %>
  </div>
<% else %>
  <p class="text-center mt-5">There is no posts yet!</p>
<% end %>
