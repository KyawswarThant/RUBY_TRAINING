<div class="container">
  <h3><%= @post.title %></h3>
  <span class="badge bg-secondary">
    <%= link_to User.find(@post.user_id).name, User.find(@post.user_id), class: "text-decoration-none text-white" %>
  </span>
  <p class="mt-3"><%= @post.description %></p>
  <%= link_to "edit", edit_post_path, class: "link" %>
  <%= link_to "delete", post_path, method: "delete", data: { confirm: "Are you sure?" }, class: "link text-danger" %>
  <%= link_to "back", posts_path, class: "link" %>
</div>
