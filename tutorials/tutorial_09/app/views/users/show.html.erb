<div class="container">
  <a href="<%= users_path %>" class="text-black"><i class="fas fa-arrow-left"></i></a>
  <div class="mb-5">
    <h4><%= @user.name %></h4>
    <h4><i class="fas fa-envelope"></i> <%= @user.email %></h4>
    <h4><i class="fas fa-phone-square"></i> <%= @user.phone %></h4>
    <h4><i class="fas fa-location-arrow"></i> <%= @user.address %></h4>
    <h4><i class="fas fa-calendar-check"></i> <%= @user.birthday %></h4>
    <%= link_to "edit", edit_user_path, class: "link" %>
    <%= link_to "delete", user_path, method: "delete", data: { confirm: "Are you sure? This will also delete all your posts!" }, class: "link text-danger" %>
    <div><%= link_to "create post", new_post_path, class: "link" %></div>
  </div>
  <% unless @posts.length < 1 %>
    <% @posts.each do |post| %>
      <h3><%= post.title %></h3>
      <p><%= post.description %></p>
      <%= link_to "edit", edit_post_path({ "id": "#{post.id}", "user_id": "#{post.user_id}" }), class: "link" %>
      <%= link_to "delete", post_path({ "id": "#{post.id}", "user_id": "#{post.user_id}" }), method: "delete", data: { confirm: "Are you sure?" }, class: "link text-danger" %>
      <hr>
    <% end %>
  <% end %>
</div>
