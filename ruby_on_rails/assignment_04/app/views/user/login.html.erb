<div class="container">
  <% if notice %>
    <span class="d-block text-success border mt-2 p-2"><%= notice %></span>
  <% elsif @error %>
    <span class="d-block text-danger border mt-2 p-2"><%= @error %></span>
  <% end %>
  <%= form_with(url: login_path, local: "true") do |form| %>
    <div class="mb-3 mt-3">
      <%= form.text_field :email, placeholder: "email", class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.password_field :password, placeholder: "password", class: "form-control" %>
    </div>
    <%= form.submit :login, class: "btn btn-primary" %>
    <%= link_to "register", new_user_path, class: "btn btn-primary" %>
  <% end %>
</div>
