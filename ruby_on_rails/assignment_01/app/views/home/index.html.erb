<div class="container">
  <div class="text-end">
    <%= link_to "Login", login_index_path, class: "btn btn-primary" %>
  </div>
  <!-- Show Users -->
  <div class="text-center mb-5">
    <h1>Users</h1>
    <%= link_to "Create User", new_user_path, class: "link" %>
  </div>
  <div class="text-center">
    <% unless @users.length < 1 %>
      <% @users.each do |user| %>
        <h3><i class="fas fa-user-alt"></i><%= link_to user.name, user, class: "text-decoration-none text-black" %></h3>
      <% end %>
    <% else %>
      <p>No user yet!</p>
    <% end %>
  </div>
  <hr>
  <!-- Show All Posts -->
  <div class="text-center mb-5">
    <h1>All Posts</h1>
  </div>
  <div class="text-center">
    <% unless @posts.length < 1 %>
      <% @posts.each do |post| %>
        <table class="table">
          <thead>
            <tr>
              <th>User Id</th>
              <th>Title</th>
              <th>Description</th>
              <th>Public Flag</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= post.user_id %></td>
              <td><%= post.title %></td>
              <td><%= post.description %></td>
              <td><%= post.public_flag %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    <% else %>
      <p>No post yet!</p>
    <% end %>
  </div>
</div>
